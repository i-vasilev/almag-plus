<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="60dp"
    tools:context=".view.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="#E1EFDF"
            android:gravity="center"
            android:text="@string/planTreatingView"
            android:textColor="#697369"
            android:textSize="@dimen/textSizeTopHead"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/layoutDetails"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom|start"
                android:text="@string/tabHomeDetails"
                android:textColor="@color/textColorForMainActivity"
                android:textSize="@dimen/textSizeMainMenu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_weight="1"
                android:text="@string/aboutDetailsMainActivity"
                android:textColor="@color/mainColor"
                android:textSize="@dimen/textSizeDescriptionMainMenu" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:id="@+id/layoutCalendar"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom|start"
                android:text="@string/tabHomeCalendar"
                android:textColor="@color/textColorForMainActivity"
                android:textSize="@dimen/textSizeMainMenu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_weight="1"
                android:text="@string/aboutCalendarMainActivity"
                android:textColor="@color/mainColor"
                android:textSize="@dimen/textSizeDescriptionMainMenu" />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/Menu"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="#E1EFDF"
            android:gravity="center"
            android:text="@string/articles"
            android:textColor="#697369"
            android:textSize="@dimen/textSizeTopHead"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/layoutDiseases"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom|start"
                android:text="@string/tabHomeDiseases"
                android:textColor="@color/textColorForMainActivity"
                android:textSize="@dimen/textSizeMainMenu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_weight="1"
                android:text="@string/aboutDiseasesMainActivity"
                android:textColor="@color/mainColor"
                android:textSize="@dimen/textSizeDescriptionMainMenu" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:id="@+id/layoutAlmag"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom|start"
                android:text="@string/tabHomeAlmagPlus"
                android:textColor="@color/textColorForMainActivity"
                android:textSize="@dimen/textSizeMainMenu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_weight="1"
                android:text="@string/aboutAlmagPlusMainActivity"
                android:textColor="@color/mainColor"
                android:textSize="@dimen/textSizeDescriptionMainMenu" />


        </LinearLayout>


    </LinearLayout>

</ScrollView>